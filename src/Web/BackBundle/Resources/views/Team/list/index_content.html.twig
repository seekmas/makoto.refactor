<div class="block">
    <!-- Messages List Title -->
    <div class="block-title">
        <div class="block-options pull-right">
            <a data-original-title="Settings" href="javascript:void(0)" class="btn btn-alt btn-sm btn-default" data-toggle="tooltip" title=""><i class="fa fa-cog"></i></a>
        </div>
        <h2>Members of Team <small> <a href="{{ url('menu.create_team') }}">Create New Member</a></small></h2>
    </div>
    <!-- END Messages List Title -->

    <!-- Messages List Content -->
    <div class="table-responsive">
        <table class="table table-hover table-vcenter">
            <tbody>
            <!-- Use the first row as a prototype for your column widths -->
            {% for member in teams %}
            <tr>
                <td>
                    <a href="{{ url('link.edit_team' , {'id':member.id}) }}"><strong>{{ member.name }}</strong></a>
                    <span class="text-muted"></span>
                </td>
                <td></td>
                <td class="text-right">{{ member.email }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- END Messages List Content -->
</div>