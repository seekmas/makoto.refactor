<script type="text/javascript">
    $(document).ready(function() {
        $().UItoTop({ easingType: 'easeOutQuart' });
    });
</script>
<script type="text/javascript">
    $("[id*='Btn']").stop(true).on('click', function (e)
            {
                var target = e.target.id.replace('Btn' , '');

                if( $('#'+target).attr('id') == undefined )
                {
                    return ;
                }

                e.preventDefault();
                $(this).scrolld();
            }
    )
</script>

