    <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('tpl/images/apple-touch-icon-114x114.png') }}">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('tpl/images/apple-touch-icon-144x144.png') }}">
    <link rel="icon" type="image/x-icon" href="/{{ 'meta.favicon' | trans | raw }}" />

</head>
<body>

<!-- Header -->
<header class="header header header-top-colored menu-colored">

    <div class="header-top">
        <div class="container">
            {% if locale() == 'zh_CN' %}
            <div class="header-top-left">

                <ul>
                    <li><a href="http://weibo.com/kicg"><i class="fa fa-weibo"></i> 擀霸精益咨询</a></li>
                    <li><a href="{{ url('app_front_homepage') }}#weixin"><i class="fa fa-weixin"></i> 擀霸中国</a></li>
                </ul>

            </div>
            {% endif %}
            <div class="header-top-right">
				<span class="register">
                    {% if locale() == 'en' %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ url('menu.home_page') }}">{{ 'front.admin' | trans | raw }}</a>
                        {% else %}
						    <a href="{{ url('fos_user_security_login') }}">{{ 'front.login' | trans | raw }}</a>
                        {% endif %}
                    {% elseif locale() == 'zh_CN' %}
                        <a href="{{ url('app_front_homepage') }}#weixin">
                        <i class="fa fa-phone"></i>
                        +86 021 62482365
                        </a>
                    {% endif %}
				</span>
            </div>
        </div>
    </div>

    <div class="header-main">
        <div class="container">
            <!-- Logo -->
            <div class="logo">

                <a href="{{ url('app_front_homepage') }}">
                    <img alt="Makoto Global Offical Website" src="{{ asset("image.logo" | trans | raw) }}" />
                </a>

            </div>
            <!-- Logo / End -->

            <button type="button" class="navbar-toggle">
                <i class="fa fa-bars"></i>
            </button>

            <!-- Navigation -->
            <nav class="nav-main">
                <ul data-breakpoint="992" class="flexnav">
                    <li class="active"><a href="{{ url('app_front_homepage') }}">{{ 'front.makoto_dna' | trans | raw }}</a>
                        <ul>
                            <li><a id="roll1Btn" href="{{ url('app_front_homepage') }}#roll1">{{ 'front.the_meaning_of_makoto' | trans | raw }}</a></li>
                            <li><a id="roll2Btn" href="{{ url('app_front_homepage') }}#roll2">{{ 'front.the_makoto_way' | trans | raw }}</a></li>
                        </ul>
                    </li>

                    <li class="active"><a href="{{ url('app_front_makotoglobal') }}">{{ 'front.makoto_global' | trans | raw }}</a>
                        <ul>
                            <li><a id="ktwBtn" href="{{ url('app_front_makotoglobal') }}#ktw">{{ 'front.kaizen_training_workshops' | trans | raw }}</a></li>
                            <li><a id="kcaBtn" href="{{ url('app_front_makotoglobal') }}#kca">{{ 'front.kaizen_consulting_activities' | trans | raw }}</a></li>

                            {% if locale() == 'en' %}
                            <li><a href="{{ url('app_front_investments') }}">{{ 'front.investments' | trans | raw }}</a></li>
                            {% endif %}
                        </ul>
                    </li>

                    <li class="active"><a href="{{ url('app_front_service') }}">{{ 'front.services' | trans | raw }}</a>
                        <ul>
                            <li><a id="jle2Btn" href="{{ url('app_front_service') }}#jle2">{{ 'front.japan_lean_experience' | trans | raw }}</a></li>
                            <li><a id="conBtn" href="{{ url('app_front_service') }}#con">{{ 'front.consulting' | trans | raw }}</a></li>
                            <li><a id="leaBtn" href="{{ url('app_front_service') }}#lea">{{ 'front.learning' | trans | raw }}</a></li>
                            <li><a id="othBtn" href="{{ url('app_front_service') }}#oth">{{ 'front.other_services' | trans | raw }}</a></li>
                            {% if locale() == 'en' %}
                            <li>
                                <a href="{{ url('app_lesson_materials') }}">{{ 'front.lesson' | trans | raw }}</a>
                            </li>
                            {% endif %}
                        </ul>
                    </li>

                    <li >
                        <a href="{{ url('app_news') }}">{{ 'front.news' | trans | raw }}</a>
                        {% if locale() == 'zh_CN' %}
                        <ul>

                            <li>
                                <a href="{{ url('app_news_by_year' , {'year':2014}) }}">2014</a>
                            </li>

                            <li>
                                <a href="{{ url('app_news_by_year' , {'year':2013}) }}">2013</a>
                            </li>

                            <li>
                                <a href="{{ url('app_news_by_year' , {'year':2012}) }}">2012</a>
                            </li>

                            <li>
                                <a href="{{ url('app_news_by_year' , {'year':2011}) }}">2011</a>
                            </li>

                            <li>
                                <a href="{{ url('app_news_by_year' , {'year':2010}) }}">2010</a>
                            </li>

                            <li>
                                <a href="{{ url('app_news_by_year' , {'year':2009}) }}">2009</a>
                            </li>
                        </ul>
                        {% endif %}
                    </li>

                    {% if false %}
                    <li >
                        <a href="{{ url('app_case') }}">{{ 'front.case' | trans | raw }}</a>
                    </li>
                    {% endif %}

                    <li >
                        <a href="{{ url('app_front_contact') }}">{{ 'front.contact' | trans | raw }}</a>
                    </li>

                </ul>
            </nav>
            <!-- Navigation / End -->
        </div>
    </div>
</header>

{% block heading %}
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>{% block heading_title %}{% endblock %}</h1>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block body %}

{% endblock %}

<!-- Footer -->
<footer class="footer" id="footer">
    <div class="footer-widgets">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <!-- Widget :: Text Widget -->
                    <div class="widget_text widget widget__footer">
                        <h3 class="widget-title">{{ 'bottom.about_us' | trans | raw }}</h3>
                        <div class="widget-content">

                            {% set bottom = vector('history_on_bottom') %}

                            {% if bottom %}

                                {{ bottom.content | raw }}

                            {% else %}
                                {{ 'bottom.about_us_content' | trans | raw }}
                            {% endif %}
                            <a href="{{ url('app_front_contact') }}" class="btn btn-primary">{{ 'bottom.read_more' | trans | raw }}</a>
                        </div>
                    </div>
                    <!-- /Widget :: Text Widget -->
                </div>
                <div class="col-md-3">
                    <!-- Widget :: Contacts Info -->
                    <div class="contacts-widget widget widget__footer">
                        <h3 class="widget-title">{{ 'bottom.contact_us' | trans | raw }}</h3>
                        <div class="widget-content">
                            <ul class="contacts-info-list">
                                <li>
                                    <i class="fa fa-map-marker"></i>
                                    <div class="info-item">
                                        {{ 'bottom.addresss' | trans | raw }}
                                    </div>
                                </li>

                                <li>
                                    <i class="fa fa-phone"></i>
                                    <div class="info-item">
                                        {{ 'bottom.tel' | trans | raw }}<br>
                                        {{ 'bottom.fax' | trans | raw }}
                                    </div>
                                </li>
                                <li>
                                    <i class="fa fa-envelope"></i>
                                    <div class="info-item">
                                        {{ 'bottom.email_dj' | trans | raw }}
                                        {{ 'bottom.email_brad' | trans | raw }}
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /Widget :: Contacts Info -->
                    </div>


                <div class="col-md-3">
                    <div class="contacts-widget widget widget__footer">
                        <h3 class="widget-title">{{ 'bottom.society' | trans | raw }}</h3>
                        <div class="widget-content">
                            <ul class="contacts-info-list">
                                {% if locale() == 'zh_CN' %}
                                    <li>
                                        <i class="fa fa-weibo"></i>
                                        <div class="info-item">
                                            <a href="http://weibo.com/kicg">擀霸中国微博</a>
                                        </div>
                                    </li>

                                    <li>
                                        <a name="weixin"></a>
                                        <i id="weixin" class="fa fa-weixin"></i>
                                        <div class="info-item">
                                            <a id="pop">擀霸中国微信公众号</a>
                                            <img class="img-thumbnail" src="{{ asset('qrcode.jpg') }}" style="width: 80%;"/>
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-twitter"></i>
                                        <a href="https://twitter.com/GembaChina">@GembaChina</a>
                                    </li>
                                {% endif %}
                                <li>
                                    <i class="fa fa-facebook"></i>
                                    <div class="info-item">
                                        {{ 'bottom.facebook' | trans | raw }}
                                    </div>
                                </li>


                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-10">

                    {{ 'bottom.copy' | trans | raw }}
                </div>
                <div class="col-sm-2 col-md-2">
                    {% if locale() == 'zh_CN' %}
                    <script type="text/javascript">
                        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
                        document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F946ed184dd4301c40ec0f57e471fd57d' type='text/javascript'%3E%3C/script%3E"));
                    </script>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- Footer / End -->

