<section class="page-content">
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <div class="title-accent">
                    <h2>{{ case.subject }}</h2>
                </div>
                <wb:share-button appkey="2isBLN" addition="number" type="button" default_text="我找到了一个很有意思的案例,你们也来看看吧" ralateUid="2298078305"></wb:share-button>

                <div class="row">
                    <div class="col-md-12">
                        {{ case.content | raw }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <hr class="visible-sm visible-xs lg">
                <div class="title-accent">
                    <h2>{{ case.category }} - 相关案例</h2>
                </div>
                <div class="list">
                    <ul>
                        {% for c in case.category.cases if c.id != case.id %}

                                <div class="icon-box circled">
                                    <a href="{{ url('app_case_read' , {'id':c.id}) }}">
                                        <div class="icon">
                                            <i class="fa fa-leaf"></i>
                                            <i class="fa fa-leaf bg-icon"></i>
                                        </div>
                                        <div class="icon-box-body">
                                            <h4>{{ c.subject }}</h4>

                                            {{ c.content | striptags | truncate(100) }}

                                        </div>
                                    </a>
                                </div>

                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>